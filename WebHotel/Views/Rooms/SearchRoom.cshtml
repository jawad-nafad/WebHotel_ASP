@model WebHotel.Models.SearchRoomViewModels.SearchRoom
@{
    ViewData["Title"] = "Available Rooms to be searched";
}

<h2>Search A Room For Booking</h2>
<h4>This page allows you to search a room and to find a room for bookins. You can then make the booking from "Book A Room" link. We are very exciting to receive you!</h4>

<div class="row">
    <div class="col-md-6">
        <form asp-action="SearchRoom">
            <div class="form-group">
                <label asp-for="userBedCount" class="control-label">Bed Count</label>
                <select asp-for="userBedCount" class="form-control">
                    <option value="1" >1 Bed</option>
                    <option value="2" >2 Beds</option>
                    <option value="3" >3 Beds</option>

                </select>
            </div>
            <div class="form-group">
                <label asp-for="userCheckIn" class="control-label">Check In Date</label>
                <input asp-for="userCheckIn" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="userCheckOut" class="control-label">Check Out Date</label>
                <input asp-for="userCheckOut" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@* Check this is invoked by 'get' or 'post' version of PeopleDiff().
    If 'post' version, display the results. *@



    @if (Model != null)
    {
        <div>
            <hr />
            @if (ViewBag.GetRooms.Count == 0)
            {

            }
            else
            {
                <table class="table">
                    <!-- .table is a Bootstrap class giving table styles -->
                    <tr>
                        <th>
                            Room ID
                        </th>
                        <th>
                            Level
                        </th>
                        <th>
                            Bed Count
                        </th>
                        <th>
                            Price
                        </th>
                    </tr>

                    @foreach (var item in ViewBag.GetRooms)
                    {
                    <tr>
                        <td>
                            @item.ID
                        </td>
                        <td>
                            @item.Level
                        </td>
                        <td>
                            @item.BedCount
                        </td>
                        <td>
                            @item.Price
                        </td>
                    </tr>
                    }
                </table>
            }
        </div>
}