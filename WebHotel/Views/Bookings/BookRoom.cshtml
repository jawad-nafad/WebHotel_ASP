@model WebHotel.Models.BookingViewModels.BookRoom
@{
    ViewData["Title"] = "Book your chosen room";
}

<h2>Book Your Room Here</h2>
<h4>This page allows you to Book a room which is available durin the time you want. We are very exciting to receive you!</h4>

<div class="row">
    <div class="col-md-6">
        <form asp-action="BookRoom">
            <div class="form-group">
                <label asp-for="RoomID" class="control-label">Room ID</label>
                <select asp-for="RoomID" class="form-control" asp-items="ViewBag.BookingList"></select>
            </div>
            <div class="form-group">
                <label asp-for="userCheckIn" class="control-label">Check In Date</label>
                <input asp-for="userCheckIn" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="userCheckOut" class="control-label">Check Out Date</label>
                <input asp-for="userCheckOut" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>



@if (Model != null)
{
<div>
    <hr />
    @if (ViewBag.SelectedRooms.Count == 0)
    {
      <h4>Booking Details:</h4>
        <table class="table">
            <!-- .table is a Bootstrap class giving table styles -->
            <tr>
                <th>
                    Room ID
                </th>
                <th>
                    Check In Date
                </th>
                <th>
                    Check Out Date
                </th>
            </tr>

            @foreach (var item in ViewBag.SelectedRooms)
            {
            <tr>
                <td>
                    @item.RoomID
                </td>
                <td>
                    @item.userCheckIn
                </td>
                <td>
                    @item.userCheckOut
                </td>
                <td>
                    @ViewBag.SelectedRooms.Cost
                </td>
            </tr>
            }
        </table>
    }
    else
    {
        <p>Sorry Room is not available during your required period of time.</p>
    }
</div>
}