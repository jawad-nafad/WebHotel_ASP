@{
    ViewData["Title"] = "Home Page";
}

<style>
    /* Make the image occupy the full width, and be responsive */
    img {
        width: 100%;
        height: auto;
    }
</style>

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="2000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>

    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/building.jpg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <style>
                    h3 {
                        font-family: Verdana;
                    }
                </style>
                <h3>
                    Front View
                </h3>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Hotel-Room-Altissia-FFXV.png" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <style>
                    h3 {
                        font-family: Verdana;
                    }
                </style>
                <h3>
                    Luxurious Bed Room
                </h3>
            </div>
        </div>
        <div class="item">
            <img src="~/images/dining.jpg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <style>
                    h3 {
                        font-family: Verdana;
                    }
                </style>
                <h3>
                    Peaceful Dining Area
                </h3>
            </div>
        </div>
        <div class="item">
            <img src="~/images/swimmingpool.jpg" alt="Package Management" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <style>
                    h3 {
                        font-family: Verdana;
                    }
                </style>
                <h3>
                    Swimming Pool
                </h3>
            </div>
        </div>
    </div>
</div>
<a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
</a>
<a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
</a>

<div class="row">
    <div class="col-sm-8">
        <style>
            h2 {
                font-family: sans-serif;
                color: #3369FF;
            }

            p {
                color: #3392FF;
            }
        </style>
        <h2 class="text-left">Welcome to our beloved hotel!!!</h2>
        <p>
            Our beloved Western Sydney Hotel is located in Parramatta CBD near the station. Welcome to our hotel page, here you can see the most updated price and deals of our available services. Our hotel is the #1 hotel in Parramatta and among the Top 10 hotels in Sydney,Australia. Please visit us and we hope that you will enjoy your time here. Thank you for giving your precious time to book a rrom in our hotel through our website!
        </p>
    </div>
